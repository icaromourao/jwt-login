{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "warn",
    "semi": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "@typescript-eslint/member-delimiter-style": "error",
    "max-len": ["error", 100]
  }
}
